# In-Tuned Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED VARIABLES
# =============================================================================

# PostgreSQL connection string
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://localhost:5432/intuned

# Application secret key (generate with: python -c "import secrets; print(secrets.token_hex(32))")
# MUST be at least 32 characters in production
SECRET_KEY=change-me-in-production-generate-a-secure-key

# Admin credentials (generate hash with: flask create-admin)
ADMIN_USERNAME=admin
ADMIN_PASSWORD_HASH=

# Developer password for maintenance mode (generate with: flask create-dev-password)
DEV_PASSWORD_HASH=

# =============================================================================
# OPTIONAL VARIABLES
# =============================================================================

# Environment (development, staging, production, testing)
APP_ENV=development

# Server port
PORT=5000

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Log format (json or text)
LOG_FORMAT=text

# =============================================================================
# DATABASE
# =============================================================================

# Connection pool settings
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30

# Test database (for running tests)
TEST_DATABASE_URL=postgresql://localhost:5432/intuned_test

# =============================================================================
# SECURITY
# =============================================================================

# Password policy
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_DIGIT=true
PASSWORD_REQUIRE_SPECIAL=false

# Account lockout
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# Session lifetime in seconds (default: 7 days)
SESSION_LIFETIME=604800

# =============================================================================
# RATE LIMITING
# =============================================================================

# Redis URL for rate limiting (optional, defaults to in-memory)
REDIS_URL=

# Default rate limit
RATELIMIT_DEFAULT=200 per day, 50 per hour

# Endpoint-specific rate limits
RATELIMIT_LOGIN=5 per minute, 20 per hour
RATELIMIT_REGISTER=3 per minute, 10 per hour
RATELIMIT_PASSWORD_RESET=3 per minute, 10 per hour
RATELIMIT_ANALYZE=30 per minute, 200 per hour

# =============================================================================
# API
# =============================================================================

# API token for accessing the analyze endpoint (optional)
API_TOKEN=

# Pagination defaults
API_PAGINATION_DEFAULT=20
API_PAGINATION_MAX=100

# =============================================================================
# CORS
# =============================================================================

# Allowed origins (comma-separated, use * for all in development)
CORS_ORIGINS=*

# =============================================================================
# CACHING
# =============================================================================

# Cache type (simple, redis, filesystem)
CACHE_TYPE=simple

# Cache timeout in seconds
CACHE_DEFAULT_TIMEOUT=300

# =============================================================================
# BACKGROUND JOBS (optional)
# =============================================================================

# Celery broker URL (for background tasks)
CELERY_BROKER_URL=

# Celery result backend
CELERY_RESULT_BACKEND=

# =============================================================================
# MONITORING (optional)
# =============================================================================

# Sentry DSN for error tracking
SENTRY_DSN=

# =============================================================================
# EXTERNAL APIs (optional)
# =============================================================================

# RapidAPI key for WordsAPI (optional, for enhanced lexicon)
RAPIDAPI_KEY=
